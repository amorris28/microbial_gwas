  keywords = {To Read},
  pages = {716-724},
  file = {/home/andrew/Zotero/storage/5DERLJSM/Waldrop and Firestone - 2006 - Response of Microbial Community Composition and Fu.pdf;/home/andrew/Zotero/storage/JXCF57FT/s00248-006-9103-3.html}
