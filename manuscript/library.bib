  doi = {10.1016/j.agee.2016.01.019},
  author = {Teixeira, Edmar I. and Johnstone, Paul and Chakwizira, Emmanuel and {de Ruiter}, John and Malcolm, Brendon and Shaw, Naomi and Zyskowski, Robert and Khaembah, Edith and Sharp, Joanna and Meenken, Esther and Fraser, Patricia and Thomas, Steve and Brown, Hamish and Curtin, Denis},
  year = {2016},
  keywords = {Nitrate leaching,Cover crops,APSIM,Crop rotation,Environmental assessment,Modelling},
  pages = {226-235},
  publisher = {{Elsevier B.V.}}
}

