  journal = {Soil and Tillage Research},
  doi = {10.1016/j.still.2011.10.015},
  author = {Soane, B. D. and Ball, B. C. and Arvidsson, J. and Basch, G. and Moreno, F. and {Roger-Estrade}, J.},
  year = {2012},
  keywords = {Zero tillage,No-till,Tillage,Direct drilling,Ploughing,Northern Europe,Western/South-western Europe},
