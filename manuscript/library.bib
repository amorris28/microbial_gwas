  keywords = {community composition,biodiversity,ecosystem function,microbial diversity,denitrification enzyme activity,denitrifier community composition,Michigan,nitrate,nitrous oxide,oxygen,pH,Read},
  pages = {1402-1414},
  file = {/home/andrew/Zotero/storage/X58UZCWK/Cavigelli and Robertson - 2000 - The Functional Significance of Denitrifier Communi.pdf;/home/andrew/Zotero/storage/NAZNTACY/0012-9658(2000)081[1402TFSODC]2.0.html}
