  doi = {10.1046/j.1365-2486.2003.00663.x},
  author = {Fierer, Noah and Allen, Andrew S. and Schimel, Joshua P. and Holden, Patricia A.},
  year = {2003},
  keywords = {CO2,Microbiology,Carbon Dioxide,Carbon storage,Microbial respiration,Q10,Soil carbon,Soil profile},
  pages = {1322-1332},
  isbn = {1354-1013},
  mendeley-tags = {Carbon Dioxide,Microbiology},
