  journal = {Ecology},
  doi = {10.2307/2679925},
  author = {Silver, Whendee L and Herman, Donald J and Firestone, Mary K and Ecology, Source and Sep, No},
  year = {2012},
  keywords = {nitrogen,nitrous oxide,denitrification,ammonium,dissimilatory nitrate reduction to,-n,cycling,dnra,tropics,upland tropical forest soils},
  pages = {2410-2416},
  isbn = {00129658}
}

