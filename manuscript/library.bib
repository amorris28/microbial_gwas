  journal = {Environmental Science and Technology},
  doi = {10.1021/acs.est.7b00305},
  author = {Yu, Guanghui and Xiao, Jian and Hu, Shuijin and Polizzotto, Matthew L. and Zhao, Fangjie and McGrath, Steve P. and Li, Huan and Ran, Wei and Shen, Qirong},
