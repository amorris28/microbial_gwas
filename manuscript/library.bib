  doi = {10.1016/j.foreco.2016.10.036},
  author = {Winsome, Tha{\"i}s and Silva, Lucas C.R. and Scow, Kate M. and Doane, Timothy A. and Powers, Robert F. and Horwath, William R.},
  year = {2017},
  keywords = {Biodiversity,Soil organic matter,Nutrient cycling,Sustainability},
