  author = {Harrison, Susan and Damschen, Ellen and {Fernandez-Going}, Barbara and Eskelinen, Anu and Copeland, Stella},
  year = {2015},
  keywords = {climate change,biogeographical affinity,climate resilience,climate resistance,Klamath-Siskiyou,Plant community change,plant functional traits,serpentine soil,soil fertility,specific leaf area,stress tolerance,topographic affinity},
