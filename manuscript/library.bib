  author = {Castellano, Michael J. and Kaye, Jason P. and Lin, Henry and Schmidt, John P.},
  year = {2012},
  keywords = {Nitrogen,Organic Matter,nitrification,Nitrogen Saturation,nitrogen retention,soil,particulate organic matter,Carbon Saturation,gross nitrification,gross nitrogen mineralization,net,texture},
