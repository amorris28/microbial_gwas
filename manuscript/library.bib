  number = {3},
  journal = {Ecology},
  doi = {10.1002/ecy.2138},
  author = {Schnyder, Elvira and Bodelier, Paul L. E. and Hartmann, Martin and Henneberger, Ruth and Niklaus, Pascal A.},
