  author = {Fan, Zhaosheng and Neff, Jason C. and Waldrop, Mark P. and Ballantyne, Ashley P. and Turetsky, Merritt R.},
  year = {2014},
  keywords = {Microbial,Carbon Dioxide,Model,Methane,Oxygen,Aerobic,Anaerobic,Habitat,Soil Pores,Warming,Water table},
  pages = {455-470},
