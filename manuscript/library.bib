  year = {2014},
  keywords = {Cover crop,Organic Farming,Tillage,Cover Crops,Weeds,Soil quality,Beneficial arthropods,Cropping system,Cropping Systems,Structural equation modeling,Weed dynamics},
  pages = {119-126},
