  keywords = {functional diversity,California grassland,coastal sage scrub,community response to global change,community-weighted means,invasive grasses,nitrogen manipulation,rainfall manipulation},
  pages = {e01602},
  file = {/home/andrew/Zotero/storage/RMNGHAS7/Kimball et al. - 2016 - Can functional traits predict plant community resp.pdf;/home/andrew/Zotero/storage/9VXYAUQC/ecs2.html}
