  author = {Petersen, S{\o}ren O. and Mutegi, James K. and Hansen, Elly M. and Munkholm, Lars J.},
  year = {2011},
  keywords = {Bulk density,Fodder radish,N2O concentration profiles,N2O emissions,No-till},
