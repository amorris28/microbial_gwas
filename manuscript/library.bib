  author = {Hinckley, Eve Lyn S and Ebel, Brian A. and Barnes, Rebecca T. and Anderson, Robert S. and Williams, Mark W. and Anderson, Suzanne P.},
  year = {2014},
  keywords = {Boulder Creek Critical Zone Observatory,Critical zone,Hydrus-1D,Lithium bromide tracer,Slope aspect,Temperature-index model},
